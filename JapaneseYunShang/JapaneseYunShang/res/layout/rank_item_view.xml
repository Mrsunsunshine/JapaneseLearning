<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rank_layout_root"
    android:layout_width="fill_parent"
    android:layout_height="56.0dip"
    android:layout_marginLeft="4.0dip"
    android:layout_marginRight="4.0dip"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="4.0dip"
        android:layout_marginTop="4.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txv_rank_index"
            android:layout_width="24.0dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="2.0dip"
            android:singleLine="true"
            android:text="100"
            android:textColor="#ffbababa"
            android:textSize="10.0dip" />

        <ImageView
            android:id="@+id/imv_rank_portrait"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="4.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/rank_person" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="4.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txv_rank_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:singleLine="true"
            android:text="username"
            android:textColor="#ff3d63bd"
            android:textSize="12.0dip" />

        <TextView
            android:id="@+id/txv_rank_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:singleLine="true"
            android:text="1小时49分"
            android:textSize="12.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/imv_rank_count"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/rank_count" />

            <TextView
                android:id="@+id/txv_rank_count"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="上升100名"
                android:textSize="12.0dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>